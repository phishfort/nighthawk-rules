{
    "name": "walletvalidators",
    "author": "Daniel Demelash",
    "description": "Rule for scam site that claim to be Blockchain Rectification app, similar to www.walletvalidators.dev",
    "target": "",
    "composite_flag_conditions": {
        "match_condition": "any",
        "conditions": [
            {
                "logical_operator": "and",
                "conditions": [
                    {
                        "attribute": "title",
                        "operator": "contains",
                        "value": "Node System"
                    },
                    {
                        "attribute": "title",
                        "operator": "contains",
                        "value": "Select Chain"
                    },
                    {
                        "attribute": "html",
                        "operator": "contains",
                        "value": "Open and decentralized protocol for syncing various Wallets issues on Secure Server."
                    },
                    {
                        "attribute": "html",
                        "operator": "contains",
                        "value": "Blockchain technology makes this new approach to digital ownership possible."
                    },
                    {
                        "attribute": "html",
                        "operator": "contains",
                        "value": "Connect Wallet"
                    },
                    {
                        "attribute": "html",
                        "operator": "contains",
                        "value": "Copyright Â© 2023 Blocknode+ Rectification . All rights reserved."
                    }
                ]
            }
        ]
    },
    "composite_false_positives": {
        "match_condition": "any",
        "conditions": []
    }
}